@model Feedback

<div class="container-fluid">
    <h2 class="mt-3 mb-0 text-muted">Feedback Form</h2>
</div>

<form asp-action="Index" method="post" role="form" class="mt-3 container-fluid">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="Name"></label>
        <span asp-validation-for="Name" class="form-text text-danger"></span>
        <input class="form-control" asp-for="Name" placeholder="John Doe">
    </div>

    <div class="form-group">
        <label asp-for="Email"></label>
        <span asp-validation-for="Email" class="form-text text-danger"></span>
        <input class="form-control" asp-for="Email" placeholder="john.doe@email.com">
        <small class="form-text text-muted">We'll never share your email with anyone else.</small>
    </div>

    <div class="form-group">
        <label asp-for="Message"></label>
        <span asp-validation-for="Message" class="form-text text-danger"></span>
        <textarea class="form-control" asp-for="Message" rows="5"></textarea>
    </div>

    <div class="form-group">
        <input class="form-check-inline" asp-for="ContactMe" checked>
        <label asp-for="ContactMe" class="form-check-label"></label>
    </div>

    <button type="submit" class="btn btn-primary">Submit Feedback</button>
</form>