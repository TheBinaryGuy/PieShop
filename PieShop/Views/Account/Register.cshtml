@model RegisterViewModel

<div class="container-fluid">
    <h2 class="mt-3 mb-0 text-muted">Login</h2>
</div>

<form asp-action="Register" method="post" role="form" class="mt-3 container-fluid">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <input type="hidden" asp-for="ReturnUrl" />

    <div class="form-group">
        <label asp-for="UserName"></label>
        <span asp-validation-for="UserName" class="form-text text-danger"></span>
        <input class="form-control" asp-for="UserName" placeholder="johndoe">
    </div>

    <div class="form-group">
        <label asp-for="Email"></label>
        <span asp-validation-for="Email" class="form-text text-danger"></span>
        <input class="form-control" asp-for="Email" placeholder="john.doe@email.com">
        <small class="form-text text-muted">We'll never share your email with anyone else.</small>
    </div>

    <div class="form-group">
        <label asp-for="Password"></label>
        <span asp-validation-for="Password" class="form-text text-danger"></span>
        <input class="form-control" asp-for="Password">
    </div>

    <button type="submit" class="btn btn-primary">Register</button>
    <a class="btn btn-light" asp-action="Login">Login</a>
</form>