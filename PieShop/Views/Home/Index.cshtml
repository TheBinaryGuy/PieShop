@model HomeViewModel

<div class="container">
    <h1 class="mt-3 mb-0 text-muted text-center">Welcome to our @Model.Title!</h1>
</div>

@foreach (var pie in Model.Pies)
{
    <div class="col-sm-3 col-lg-3 col-md-3 mt-3">
        <div class="card" style="width: 15rem; height: 22rem;">
            <img class="card-img-top" src="@pie.ImageThumbnailUrl" alt="@pie.Name" />
            <div class="card-body">
                <h3 class="card-title">
                    <a asp-controller="Home" asp-action="Details" asp-route-id="@pie.Id">@pie.Name</a>
                </h3>
                <h5 class="card-subtitle mb-2 text-muted">@pie.Price.ToString("c")</h5>
                <p class="card-text">@pie.ShortDescription</p>
            </div>
        </div>
    </div>
}